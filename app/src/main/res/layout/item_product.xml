<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="14dp">
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp">
        <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg02"
                android:padding="8dp"
                android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_gravity="center_horizontal">
                <ImageView
                        android:id="@+id/image_card"
                        android:layout_width="120dp"
                        android:layout_height="100dp"
                        android:src="@drawable/red_hudi_wear"
                        android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">
                <TextView
                        android:id="@+id/model_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="model_id"
                        android:visibility="gone"/>
                <TextView
                        android:id="@+id/name_product_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Red hooddy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/price_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="38dp"/>
                    <TextView
                            android:id="@+id/icon_dollars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="26sp"
                            android:textStyle="bold" />
                </LinearLayout>
                <TextView
                        android:id="@+id/description_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mLMLMLMLmlmnlmlmlmlmlmlml,
                     производство Германии, размеры длина: 2.40 м
                     высота: 1.45 ширина1: 1.6м    ширина2: 3.2м,
                      цвет Марроко "
                        android:textSize="20sp"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="9dp"
                        android:visibility="gone"
                        android:textAlignment="center"/>
                <TextView
                        android:id="@+id/ability_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="is available/ out of store"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                <LinearLayout
                        android:id="@+id/ll_conterlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="items:"
                            android:visibility="gone"/>
                    <TextView
                            android:id="@+id/item_card_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="6dp"
                            android:text="1"
                            android:visibility="gone"/>
                    <TextView
                            android:id="@+id/btn_increment_plus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="8dp"
                            android:background="#D2D7ED"
                            android:text="+"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:contentDescription="more"
                            android:visibility="gone"
                    />
                    <TextView
                            android:id="@+id/btn_increment_minus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:background="#D2D7ED"
                            android:text="-"
                            android:textSize="32sp"
                            android:textAlignment="center"
                            android:contentDescription="more"
                    />
                </LinearLayout>

                <ImageButton
                        android:id="@+id/btn_zoom"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="18dp"
                        android:background="#D2D7ED"
                        android:contentDescription="more"
                        android:src="@android:drawable/arrow_down_float" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:id="@+id/tovar_favorite_check"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src ="@drawable/ic_check_outline"
                android:visibility= "invisible"
                android:layout_gravity ="center"
        />
    </androidx.cardview.widget.CardView>

</LinearLayout>