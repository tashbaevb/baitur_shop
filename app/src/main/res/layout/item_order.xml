<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="7dp">
    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="26dp"
    >
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/card_bg02"
                android:padding="10dp"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="26dp"
                    android:layout_gravity="center_horizontal">
                <ImageView
                        android:id="@+id/image_card"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        android:src="@drawable/iphone_cover"
                        android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >

                <TextView
                        android:id="@+id/name_product_card"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Iphone-14"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textAlignment="center"
                />
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">
                    <TextView
                            android:id="@+id/price_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="160"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                    />
                    <TextView
                            android:id="@+id/icon_dollars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="items:"/>
                    <TextView
                            android:id="@+id/productsCounter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="3dp"
                            android:text="1"/>
                    <TextView
                            android:id="@+id/btn_increment_plus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="3dp"
                            android:background="#D2D7ED"
                            android:text="+"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:contentDescription="more"
                    />
                    <TextView
                            android:id="@+id/btn_increment_minus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#D2D7ED"
                            android:text="-"
                            android:textSize="32sp"
                            android:textAlignment="center"
                            android:contentDescription="more"
                    />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>