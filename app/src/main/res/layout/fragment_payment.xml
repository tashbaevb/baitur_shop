<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto" tools:context=".ui.payment.PaymentFragment"
              android:orientation="vertical" android:padding="18dp">
    <ImageButton
            android:id="@+id/btn_back" android:layout_width="36dp"
            android:layout_height="30dp" android:layout_marginStart="6dp"
            android:background="@drawable/baseline_arrow_back_24"/>
    <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Payments ways:" android:layout_gravity="center_horizontal"
            android:textAlignment="center" android:textColor="#4044F8"
            android:textSize="26sp" android:textStyle="bold"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:gravity="center"
                  android:padding="8dp">
        <androidx.cardview.widget.CardView
                android:id="@+id/card_visa" android:layout_width="140dp"
                android:layout_height="90dp" app:cardBackgroundColor="#CAC7C7"
                app:cardCornerRadius="26dp" android:layout_marginRight="10dp">
            <ImageView android:layout_width="90dp"
                       android:layout_height="80dp" android:src="@drawable/visa_mastercard"
                       android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/card_paypal" android:layout_width="140dp"
                android:layout_height="90dp" app:cardBackgroundColor="#CAC7C7"
                app:cardCornerRadius="26dp" android:layout_marginLeft="10dp"
        >
            <ImageView
                    android:layout_width="90dp" android:layout_height="80dp"
                    android:src="@drawable/pay_pal_icon" android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center" android:padding="8dp">
        <androidx.cardview.widget.CardView android:id="@+id/card_m_bank"
                                           android:layout_width="140dp" android:layout_height="90dp"
                                           app:cardBackgroundColor="#CAC7C7" app:cardCornerRadius="26dp"
                                           android:layout_marginRight="10dp">
            <ImageView
                    android:layout_width="90dp" android:layout_height="70dp"
                    android:src="@drawable/m_bank_image" android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:id="@+id/card_o_dengi"
                                           android:layout_width="140dp" android:layout_height="90dp"
                                           app:cardBackgroundColor="#CAC7C7" app:cardCornerRadius="26dp"
                                           android:layout_marginLeft="10dp">
            <ImageView android:layout_width="90dp"
                       android:layout_height="70dp" android:src="@drawable/o_dengi"
                       android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button android:id="@+id/btn_pay_finally"
            android:layout_width="wrap_content" android:layout_height="50dp"
            app:cornerRadius="20dp" android:backgroundTint="@color/cardview_shadow_end_color"
            android:textAlignment="center" android:textColor="@color/black"
            android:layout_marginTop="20dp" android:layout_gravity="center_horizontal"
            android:text="Оплатить" android:textAllCaps="false"/>
    <ProgressBar android:id="@+id/progress_bar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center" android:visibility="invisible"/>
    <TextView android:id="@+id/tv_otvet"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="20sp" android:layout_marginTop="6dp"
              android:textColor="@color/black"/>
</LinearLayout>